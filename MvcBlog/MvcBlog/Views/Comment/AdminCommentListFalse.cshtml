@model IEnumerable<EntityLayer.Concrete.Comment>
@{
    ViewBag.Title = "AdminCommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="card-body">
                    @foreach (var item in Model)
                    {
                        <div class="post">
                            <div class="user-block">
                                <img class="img-circle img-bordered-sm" src="/adminLTE-3.0.4/dist/img/user1-128x128.jpg" alt="user image">
                                <span class="username">
                                    <a href="#">@item.UserName --</a>
                                    <a href="#">  @item.Blog.BlogTitle </a>
                                    <a href="#" class="float-right btn-tool" style="cursor:no-drop;"><i title="Yorumu gizle" class="fas fa-ban"></i></a>
                                    <a href="/Comment/StatusChangeToTrue/@item.CommentId" class="float-right btn-tool" ><i title="Yorumu onayla" class="fas fa-check"></i></a>
                                </span>
                                <span class="description">Yorumun yapıldığı tarih: @(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</span>
                            </div>
                            <p>@item.CommentText</p>
                            <br />

                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</body>
</html>



