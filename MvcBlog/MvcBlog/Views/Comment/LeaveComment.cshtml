<style>

</style>
<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Yorum Bırak</h3>
    <form method="post" class="p-5 bg-light">
        <div class="form-group">
            <label for="name">Ad ve Soyad *</label>
            <input type="text" class="form-control" name="UserName">
        </div>
        <div class="form-group">
            <label for="email">Mail Adresi *</label>
            <input type="email" class="form-control" name="Mail">
        </div>
        <input name="CommentDate" type="hidden" value="@DateTime.Now.ToShortDateString()" />
        <input name="BlogId" type="hidden" value="@ViewBag.id" />
        <div class="form-group">
            <label for="message">Yorum*</label>
            <textarea name="CommentText" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Yorum Yap" class="btn btn-primary">
        </div>
        <div class="form-group">
            <label for="message">Puanınız: </label>
            <label style="margin-right:15px;">@Html.RadioButton("BlogRating", 1)1</label>
            <label style="margin-right:15px;">@Html.RadioButton("BlogRating", 2)2</label>
            <label style="margin-right:15px;">@Html.RadioButton("BlogRating", 3)3</label>
            <label style="margin-right:15px;">@Html.RadioButton("BlogRating", 4)4</label>
            <label style="margin-right:15px;">@Html.RadioButton("BlogRating", 5)5</label>
        </div>

    </form>
</div>
