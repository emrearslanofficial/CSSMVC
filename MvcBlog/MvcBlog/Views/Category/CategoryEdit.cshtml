@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "CategoryEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <form class="form-group" method="post">
        <div class="wrapper">
            <section class="content">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Yazar Hakkında</h3>

                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="inputName">Adı Soyadı</label>
                                    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="inputDescription">Yazar Hakkında</label>
                                    @Html.TextAreaFor(x => x.CategoryDescription, 10, 20, new { @class = "form-control" })
                                </div>
                                <div style="visibility:hidden;" class="form-group">
                                    <label for="inputEstimatedDuration">ID</label>
                                    @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <input type="submit" value="Kaydet" class="btn btn-success float-right">
                    </div>
                </div>
            </section>
        </div>
    </form>
</body>
</html>

